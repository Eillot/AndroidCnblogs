<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewNewsItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="@string/app_name"
        android:textColor="@color/title_text_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/bg_list_item" >

        <ImageView
            android:id="@+id/imageViewNewsItemTopicIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/textViewNewsItemSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:text="@string/app_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp" >

        <TextView
            android:id="@+id/textViewNewsItemTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewNewsItemSourceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp" >

        <TextView
            android:id="@+id/textViewNewsItemPub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/text_pub_time"
            android:textColor="@color/splash_logo_en_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewNewsItemPublisheddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textViewNewsItemPub"
            android:layout_toRightOf="@+id/textViewNewsItemPub"
            android:text="@string/app_name"
            android:textColor="@color/splash_logo_en_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewNewsItemDiggs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/app_name"
            android:textColor="@color/splash_logo_en_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewNewsItemView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textViewNewsItemDiggs"
            android:layout_toStartOf="@+id/textViewNewsItemDiggs"
            android:text="@string/app_name"
            android:textColor="@color/splash_logo_en_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewNewsItemComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textViewNewsItemView"
            android:layout_toStartOf="@+id/textViewNewsItemView"
            android:text="@string/app_name"
            android:textColor="@color/splash_logo_en_color"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>